<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.ospreydcs.dp.gui.component.CalculationFrameDetailsDialogController">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <!-- Header with frame name -->
    <Label fx:id="frameNameLabel" styleClass="h4" wrapText="true">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <!-- Content area with frame details -->
    <TextArea fx:id="contentArea" editable="false" wrapText="true" 
              prefRowCount="20" prefColumnCount="80"
              VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </TextArea>

    <!-- Button bar -->
    <ButtonBar>
        <buttons>
            <Button fx:id="closeButton" text="Close" 
                    onAction="#onClose" 
                    ButtonBar.buttonData="CANCEL_CLOSE" 
                    styleClass="btn,btn-secondary" />
        </buttons>
    </ButtonBar>

</VBox>