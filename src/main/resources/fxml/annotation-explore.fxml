<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" styleClass="container" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ospreydcs.dp.gui.AnnotationExploreController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Annotation Query Editor Section -->
    <VBox spacing="15" styleClass="panel, panel-primary">
        <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
        </padding>
        
        <!-- Section Header -->
        <Label styleClass="h4" text="ðŸ“ Annotation Query Editor" />
        
        <!-- Search Form -->
        <GridPane hgap="15" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="120" prefWidth="120" />
                <ColumnConstraints minWidth="200" prefWidth="200" hgrow="ALWAYS" />
                <ColumnConstraints minWidth="120" prefWidth="120" />
                <ColumnConstraints minWidth="200" prefWidth="200" hgrow="ALWAYS" />
            </columnConstraints>
            
            <!-- Row 0: Annotation ID and Owner -->
            <Label styleClass="control-label" text="Annotation ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="annotationIdField" promptText="Enter annotation ID (optional)" 
                      GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
            <Label styleClass="control-label" text="Owner:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
            <TextField fx:id="ownerField" promptText="Enter owner ID (optional)" 
                      GridPane.columnIndex="3" GridPane.rowIndex="0" />
            
            <!-- Row 1: Related Datasets ID and Related Annotations ID -->
            <Label styleClass="control-label" text="Related Datasets ID:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="relatedDatasetsIdField" promptText="Enter related dataset ID (optional)" 
                      GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <Label styleClass="control-label" text="Related Annotations ID:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <TextField fx:id="relatedAnnotationsIdField" promptText="Enter related annotation ID (optional)" 
                      GridPane.columnIndex="3" GridPane.rowIndex="1" />
            
            <!-- Row 2: Name/Comment/Event Text and Tag Value -->
            <Label styleClass="control-label" text="Name / Comment / Event:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="nameCommentEventField" promptText="Search in name, comment, or event (optional)" 
                      GridPane.columnIndex="1" GridPane.rowIndex="2" />
            
            <Label styleClass="control-label" text="Tag Value:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <TextField fx:id="tagValueField" promptText="Enter tag value (optional)" 
                      GridPane.columnIndex="3" GridPane.rowIndex="2" />
            
            <!-- Row 3: Attribute Key and Attribute Value -->
            <Label styleClass="control-label" text="Attribute Key:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="attributeKeyField" promptText="Enter attribute key (optional)" 
                      GridPane.columnIndex="1" GridPane.rowIndex="3" />
            
            <Label styleClass="control-label" text="Attribute Value:" GridPane.columnIndex="2" GridPane.rowIndex="3" />
            <TextField fx:id="attributeValueField" promptText="Enter attribute value (optional)" 
                      GridPane.columnIndex="3" GridPane.rowIndex="3" />
        </GridPane>
        
        <!-- Search Button and Status -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button fx:id="searchButton" onAction="#onSearch" styleClass="btn, btn-primary, btn-lg" text="Search" />
            <Button fx:id="clearButton" onAction="#onClear" styleClass="btn, btn-default" text="Clear" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="searchStatusLabel" styleClass="text-info" />
            <ProgressIndicator fx:id="searchProgressIndicator" visible="false" prefHeight="20.0" prefWidth="20.0" />
        </HBox>
    </VBox>
    
    <!-- Annotation Query Results Section -->
    <VBox spacing="15" styleClass="panel, panel-success" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
        </padding>
        
        <!-- Results Header -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label styleClass="h4" text="ðŸ“‹ Annotation Query Results" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="resultCountLabel" styleClass="text-success" />
            <Label fx:id="resultsStatusLabel" styleClass="text-muted" text="Ready" />
        </HBox>
        
        <!-- Results Table -->
        <TableView fx:id="resultsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="120" />
                <TableColumn fx:id="ownerColumn" text="Owner" prefWidth="100" />
                <TableColumn fx:id="relatedDatasetsColumn" text="Related Datasets" prefWidth="150" />
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="120" />
                <TableColumn fx:id="relatedAnnotationsColumn" text="Related Annotations" prefWidth="150" />
                <TableColumn fx:id="commentColumn" text="Comment" prefWidth="150" />
                <TableColumn fx:id="tagsColumn" text="Tags" prefWidth="100" />
                <TableColumn fx:id="attributesColumn" text="Attributes" prefWidth="120" />
                <TableColumn fx:id="eventColumn" text="Event" prefWidth="100" />
                <TableColumn fx:id="calculationsColumn" text="Calculations Data Frames" prefWidth="180" />
            </columns>
            <placeholder>
                <Label text="No annotation search results to display. Use the Annotation Query Editor above to search for annotations." />
            </placeholder>
        </TableView>
    </VBox>
</VBox>